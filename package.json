{
	"name": "ardine",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"pnpm --filter @ardine/api dev\" \"pnpm --filter @ardine/web dev\"",
		"build": "pnpm --filter @ardine/shared build && pnpm --filter @ardine/db build && pnpm --filter @ardine/ui build && pnpm --filter @ardine/api build && pnpm --filter @ardine/web build",
		"test": "pnpm --recursive test",
		"lint": "pnpm --recursive lint",
		"format": "pnpm --recursive format",
		"check": "pnpm --recursive check",
		"typecheck": "pnpm --recursive typecheck",
		"migrate:up": "pnpm --filter @ardine/db migrate:up",
		"migrate:down": "pnpm --filter @ardine/db migrate:down",
		"migrate:create": "pnpm --filter @ardine/db migrate:create",
		"db:seed": "pnpm --filter @ardine/db seed",
		"clean": "pnpm --recursive clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"concurrently": "^9.1.2",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"zod": "^3.25.76"
	}
}
